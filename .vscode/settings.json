{
    "karmaTestExplorer.testFiles": [
      "src/**/(*.spec).{ts,js}",
    ],
    "karmaTestExplorer.excludeFiles": [
      "**/*.d.ts"
    ],
    "karmaTestExplorer.reloadOnKarmaConfigChange": true,
    "karmaTestExplorer.logLevel": "debug",
    "karmaTestExplorer.karmaReporterLogLevel": "debug",
    "karmaTestExplorer.customLauncher": {
      "base": "Firefox",
      "flags": [
        "--headless",
        "--disable-gpu",
        "--disable-dev-shm-usage",
        "--remote-debugging-port=9222"
      ]
    }
}